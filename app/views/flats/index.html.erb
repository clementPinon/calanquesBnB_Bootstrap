<div class="container">

  <div class="row">
    <% @flats.each do |flat|  %>

      <div class="col-xs-12 col-sm-6 col-md-6">

        <div class="card" style="background-image: url('<%= image_path("#{flat.city}.jpg") %>')">
            <%= link_to "#{flat.city}", flat_path(flat) %>
            <p><%= flat.city %></p>

        </div>
      </div>
    <% end %>

  </div>

</div>
